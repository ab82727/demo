<h1>New User</h1>

<div class="row">
 <%= form_for @user do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :email %>
  <%= f.text_field :email %>
  <%= f.label :password %>
  <%= f.password_field :password %>
  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>
  <div>
   <%= f.submit "Register!", class: "btn btn-primary" %>
  </div>
 <%= link_to 'Back', root_path %>
 <% end %>
</div>
